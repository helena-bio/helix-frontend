{
  "name": "helix-insight-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Helix Insight Frontend - Monorepo with marketing site, app, and shared components",
  "workspaces": [
    "marketing",
    "app",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=app",
    "dev:marketing": "npm run dev --workspace=marketing",
    "dev:app": "npm run dev --workspace=app",
    "build": "npm run build --workspace=app",
    "build:marketing": "npm run build --workspace=marketing",
    "build:app": "npm run build --workspace=app",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf node_modules marketing/node_modules app/node_modules shared/node_modules marketing/.next app/.next"
  },
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5"
  }
}
